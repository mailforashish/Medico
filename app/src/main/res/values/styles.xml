<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="homeImage">
        <item name="android:padding">10dp</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="homeText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/opensans_semibold</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">10sp</item>
    </style>


    <style name="AppTheme.TextErrorAppearance">
        <item name="android:textColor">#ff0000</item>
    </style>

    <style name="AppTheme.NoActionBar.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CustomTextAppearanceTab" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/opensans_bold</item>
    </style>

    <style name="RatingBar" parent="AppTheme">
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/color_secondary</item>
    </style>

    <style name="Theme.AppCompat.Dialog">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorAccent">@color/grey_light</item>
    </style>

    <declare-styleable name="CirclesLoadingView">
        <attr name="circleRadius" format="dimension" />
        <attr name="circleMargin" format="dimension" />
        <attr name="animDistance" format="dimension" />
        <attr name="animDuration" format="integer" />
        <attr name="animDelay" format="integer" />
        <attr name="animInterpolator" format="enum">
            <enum name="accelerate" value="0"/>
            <enum name="decelerate" value="1"/>
            <enum name="accelerateDecelerate" value="2"/>
            <enum name="anticipate" value="3"/>
            <enum name="anticipateOvershoot" value="4"/>
            <enum name="linear" value="5"/>
            <enum name="overshoot" value="6"/>
        </attr>
    </declare-styleable>

    <style name="StepView">
        <item name="sv_selectedCircleColor">@color/color_secondary</item>
        <item name="sv_selectedCircleRadius">14dp</item>
        <item name="sv_selectedTextColor">@color/color_header_text</item>
        <item name="sv_selectedStepNumberColor">@color/color_header_text</item>
        <item name="sv_stepNumberTextSize">12sp</item>
        <item name="sv_doneStepMarkColor">@color/white</item>
        <item name="sv_doneCircleColor">@color/color_secondary</item>
        <item name="sv_doneCircleRadius">14dp</item>
        <item name="sv_doneTextColor">@color/color_header_text</item>
        <item name="sv_nextTextColor">@color/grey_header_bg</item>
        <item name="sv_nextStepLineColor">@color/white</item>
        <item name="sv_doneStepLineColor">@color/color_third</item>
        <item name="sv_stepPadding">12dp</item>
        <item name="sv_textPadding">12dp</item>
        <item name="sv_stepLineWidth">0.5dp</item>
        <item name="sv_textSize">14sp</item>
    </style>

</resources>