<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/DP10"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/rl_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="0dp">

        <RelativeLayout
            android:id="@+id/icon"
            android:layout_width="114dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_shop_by">

            <ImageView
                android:id="@+id/img_user"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|center_horizontal"
                android:padding="5dp"
                android:src="@drawable/home_care" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_articles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@id/icon"
            android:layout_toRightOf="@+id/icon"
            android:fontFamily="@font/opensans_semibold"
            android:includeFontPadding="false"
            android:justificationMode="none"
            android:paddingTop="10dp"
            android:text="Simple steps to maintain a healthy heart for all ages"
            android:textColor="@color/color_header_text"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_articles_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_articles"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="@dimen/DP5"
            android:layout_toRightOf="@+id/icon"
            android:fontFamily="@font/opensans_regular"
            android:includeFontPadding="false"
            android:text="12 Jun 2020"
            android:textColor="@color/color_header_text"
            android:textSize="12sp" />

    </RelativeLayout>


</RelativeLayout>