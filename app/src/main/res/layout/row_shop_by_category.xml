<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_image_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginTop="15dp"
    android:foreground="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/iv_top_category"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/bg_shop_by"
        android:clickable="false"
        android:focusable="false"
        android:paddingStart="2dp"
        android:paddingTop="2dp"
        android:paddingEnd="2dp"
        android:paddingBottom="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_category_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:fontFamily="@font/opensans_semibold"
        android:gravity="center_horizontal"
        android:maxLines="2"
        android:textColor="@color/color_header_text"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_top_category"
        app:layout_constraintStart_toStartOf="@+id/iv_top_category"
        app:layout_constraintTop_toBottomOf="@+id/iv_top_category" />
</androidx.constraintlayout.widget.ConstraintLayout>
