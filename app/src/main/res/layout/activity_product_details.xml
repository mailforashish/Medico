    <data>

        <variable
            name="clickListener"
            type="com.medico.app.activity.ProductDetailsActivity.EventHandler" />
    </data>

    <RelativeLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="24dp">

            <RelativeLayout
                android:id="@+id/rl_search_and_cart"
                android:layout_width="wrap_content"
                android:layout_height="?android:attr/actionBarSize"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:visibility="visible">

                <RelativeLayout
                    android:id="@+id/rl_offers_new"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:visibility="visible">


                    <ImageView
                        android:id="@+id/iv_offerIcon_percent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/ic_discount" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/iv_search"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:layout_toEndOf="@+id/rl_offers_new"
                    android:src="@drawable/ic_search"
                    android:visibility="visible" />

                <RelativeLayout
                    android:id="@+id/fl_cart"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/iv_search"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/iv_cart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:onClick="@{() -> clickListener.moveCartPage()}"
                        android:src="@drawable/ic_cart" />

                    <TextView
                        android:id="@+id/tv_cart_num"
                        android:layout_width="wrap_content"
                        android:layout_height="16dp"
                        android:layout_marginStart="16dp"
                        android:background="@drawable/shape_maroon_circle"
                        android:gravity="center"
                        android:maxLength="3"
                        android:minWidth="16dp"
                        android:paddingLeft="2dp"
                        android:paddingTop="1dp"
                        android:paddingRight="2dp"
                        android:paddingBottom="1dp"
                        android:text="9"
                        android:textColor="@color/white"
                        android:textSize="9sp"
                        android:visibility="visible" />
                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize"
                android:layout_toStartOf="@+id/rl_search_and_cart"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_back_md"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:contentDescription="@null"
                    android:onClick="@{() -> clickListener.backMDDetail()}"
                    android:src="@drawable/ic_back_pay" />

                <TextView
                    android:id="@+id/txt_page_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iv_back_md"
                    android:ellipsize="end"
                    android:fontFamily="@font/opensans_bold"
                    android:maxLines="1"
                    android:text="Medicine Details"
                    android:textColor="@color/color_header_text"
                    android:textSize="16sp" />

            </RelativeLayout>

