<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="clickListener"
            type="com.medico.app.activity.ProductDetailsActivity.EventHandler" />
    </data>

    <RelativeLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="24dp">

            <RelativeLayout
                android:id="@+id/rl_search_and_cart"
                android:layout_width="wrap_content"
                android:layout_height="?android:attr/actionBarSize"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:visibility="visible">

                <RelativeLayout
                    android:id="@+id/rl_offers_new"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/iv_offerIcon_percent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:contentDescription="null"
                        android:paddingRight="5dp"
                        android:src="@drawable/ic_discount" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/iv_search"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:layout_toEndOf="@+id/rl_offers_new"
                    android:src="@drawable/ic_search"
                    android:visibility="visible" />

                <RelativeLayout
                    android:id="@+id/fl_cart"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/iv_search"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/iv_cart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:onClick="@{() -> clickListener.moveCartPage()}"
                        android:src="@drawable/ic_cart" />

                    <TextView
                        android:id="@+id/tv_cart_num"
                        android:layout_width="wrap_content"
                        android:layout_height="16dp"
                        android:layout_marginStart="16dp"
                        android:background="@drawable/shape_maroon_circle"
                        android:gravity="center"
                        android:maxLength="3"
                        android:minWidth="16dp"
                        android:paddingLeft="2dp"
                        android:paddingTop="1dp"
                        android:paddingRight="2dp"
                        android:paddingBottom="1dp"
                        android:text="9"
                        android:textColor="@color/white"
                        android:textSize="9sp"
                        android:visibility="visible" />
                </RelativeLayout>

            </RelativeLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize"
                android:layout_toStartOf="@+id/rl_search_and_cart"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_back_order"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:onClick="@{() -> clickListener.backMDDetail()}"
                    android:src="@drawable/ic_back_pay"
                    app:layout_constraintEnd_toStartOf="@+id/txt_page_title"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txt_page_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/opensans_bold"
                    android:text="Medicine Details"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/iv_back_order"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </RelativeLayout>

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/content_coordinator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/cl_viewCart"
            android:layout_below="@+id/collapse"
            android:background="@color/white"
            android:clipToPadding="false">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/app_bar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <com.google.android.material.appbar.CollapsingToolbarLayout
                    android:id="@+id/collapsing_toolbar_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:fitsSystemWindows="true"
                    app:collapsedTitleGravity="center_horizontal|start"
                    app:contentInsetStartWithNavigation="0dp"
                    app:expandedTitleGravity="center_horizontal|top"
                    app:layout_scrollFlags="scroll">

                    <LinearLayout
                        android:id="@+id/cl_root"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:orientation="vertical">

                            <include
                                android:id="@+id/row_location"
                                layout="@layout/location_layout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                            <RelativeLayout
                                android:id="@+id/rl_banner"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/white">

                                <ImageView
                                    android:id="@+id/iv_rx_share"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_gravity="end"
                                    android:layout_marginTop="25dp"
                                    android:layout_marginEnd="15dp"
                                    android:background="@drawable/white_circle"
                                    android:contentDescription="@null"
                                    android:elevation="3dp"
                                    android:foreground="?android:attr/selectableItemBackground"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/ic_md_share" />

                                <ImageView
                                    android:id="@+id/iv_rx_heart"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_below="@+id/iv_rx_share"
                                    android:layout_alignParentEnd="true"
                                    android:layout_gravity="end"
                                    android:layout_marginTop="15dp"
                                    android:layout_marginEnd="15dp"
                                    android:background="@drawable/white_circle"
                                    android:contentDescription="@null"
                                    android:elevation="3dp"
                                    android:foreground="?android:attr/selectableItemBackground"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/ic_heart" />

                                <ImageView
                                    android:id="@+id/iv_rx"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_below="@+id/iv_rx_heart"
                                    android:layout_alignParentEnd="true"
                                    android:layout_gravity="end"
                                    android:layout_marginTop="15dp"
                                    android:layout_marginEnd="15dp"
                                    android:background="@drawable/white_circle"
                                    android:contentDescription="@null"
                                    android:elevation="3dp"
                                    android:foreground="?android:attr/selectableItemBackground"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/ic_md_rx_2" />

                                <androidx.viewpager.widget.ViewPager
                                    android:id="@+id/bannerPager"
                                    android:layout_width="match_parent"
                                    android:layout_height="200dp"
                                    android:background="@color/white"
                                    android:clipToPadding="false"
                                    android:overScrollMode="never"
                                    android:visibility="visible" />

                                <LinearLayout
                                    android:id="@+id/dots_layout_Details"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/bannerPager"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginTop="15dp"
                                    android:layout_marginRight="15dp"
                                    android:layout_marginBottom="5dp"
                                    android:layout_toLeftOf="@+id/ll_read_more"
                                    android:layout_toRightOf="@+id/ll_offers_tag"
                                    android:gravity="center"
                                    android:orientation="horizontal" />

                                <LinearLayout
                                    android:id="@+id/ll_offers_tag"
                                    android:layout_width="75dp"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/bannerPager"
                                    android:layout_marginStart="15dp"
                                    android:layout_marginBottom="5dp"
                                    android:background="@drawable/offer_bg"
                                    android:foreground="?android:attr/selectableItemBackground"
                                    android:orientation="horizontal"
                                    android:paddingStart="0dp"
                                    android:paddingEnd="3dp"
                                    android:visibility="visible">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:contentDescription="@null"
                                        android:src="@drawable/ic_discount" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_marginStart="3dp"
                                        android:fontFamily="@font/opensans_semibold"
                                        android:gravity="center_vertical"
                                        android:text="OFFERS"
                                        android:textAllCaps="true"
                                        android:textColor="@color/color_secondary"
                                        android:textSize="10sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/ll_read_more"
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:layout_below="@+id/bannerPager"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginEnd="5dp"
                                    android:layout_marginBottom="5dp"
                                    android:background="@drawable/read_info_bg"
                                    android:foreground="?android:attr/selectableItemBackground"
                                    android:orientation="horizontal"
                                    android:paddingStart="15dp"
                                    android:paddingTop="5dp"
                                    android:paddingEnd="15dp"
                                    android:paddingBottom="5dp"
                                    android:visibility="visible">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:fontFamily="@font/opensans_semibold"
                                        android:gravity="center_vertical"
                                        android:text="Read Info"
                                        android:textColor="@color/color_secondary"
                                        android:textSize="12sp" />

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginStart="5dp"
                                        android:layout_marginTop="2dp"
                                        android:src="@drawable/ic_arrow_medicine" />
                                </LinearLayout>
                            </RelativeLayout>

                        </LinearLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/cl_medicine_unit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:paddingBottom="10dp">

                            <TextView
                                android:id="@+id/tv_drug_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:layout_marginEnd="16dp"
                                android:ellipsize="end"
                                android:fontFamily="@font/opensans_bold"
                                android:maxLines="3"
                                android:text="Ecosprin 75mg strip of 14 Tablets"
                                android:textColor="@color/color_header_text"
                                android:textSize="14sp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_goneMarginStart="16dp"
                                app:layout_goneMarginTop="20dp" />

                            <TextView
                                android:id="@+id/tv_manufacturer"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="16dp"
                                android:text="Dolo"
                                android:textColor="@color/color_text_grey"
                                android:textSize="12sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/tv_drug_name"
                                app:layout_goneMarginStart="16dp" />

                            <TextView
                                android:id="@+id/tv_quantity_pack"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="16dp"
                                android:layout_marginBottom="5dp"
                                android:ellipsize="end"
                                android:fontFamily="@font/opensans_semibold"
                                android:maxLines="2"
                                android:text="14 Tablet(S)IN STRIP"
                                android:textColor="@color/color_header_text"
                                android:textSize="12sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/tv_manufacturer"
                                app:layout_goneMarginStart="16dp" />

                            <LinearLayout
                                android:id="@+id/ratings_layout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                app:layout_constraintStart_toStartOf="@+id/tv_quantity_pack"
                                app:layout_constraintTop_toBottomOf="@+id/tv_quantity_pack">

                                <RatingBar
                                    android:id="@+id/rbItem"
                                    style="?android:attr/ratingBarStyleSmall"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:isIndicator="true"
                                    android:layerType="software"
                                    android:numStars="5"
                                    android:stepSize="0.05" />

                                <TextView
                                    android:id="@+id/tv_ratings_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="2dp"
                                    android:text="4.8"
                                    android:textColor="@color/color_text_grey"
                                    android:textSize="12sp"
                                    app:layout_goneMarginStart="16dp" />
                            </LinearLayout>


                            <TextView
                                android:id="@+id/tv_price"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="16dp"
                                android:drawableStart="@drawable/ic_rupees_new"
                                android:fontFamily="@font/opensans_bold"
                                android:text="12"
                                android:textColor="@color/color_header_text"
                                android:textSize="14sp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/ratings_layout"
                                app:layout_goneMarginStart="16dp" />

                            <TextView
                                android:id="@+id/tv_strike_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:fontFamily="@font/opensans_bold"
                                android:text="MRP 14"
                                android:textColor="@color/grey_darker"
                                android:textSize="12sp"
                                app:layout_constraintBottom_toBottomOf="@+id/tv_price"
                                app:layout_constraintStart_toEndOf="@+id/tv_price" />

                            <TextView
                                android:id="@+id/tv_discount_percent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:background="@drawable/ribbon_horizontal"
                                android:fontFamily="@font/opensans_semibold"
                                android:gravity="center_vertical"
                                android:text="15%OFF"
                                android:textColor="@color/white"
                                android:textSize="10sp"
                                app:layout_constraintBottom_toBottomOf="@+id/tv_strike_price"
                                app:layout_constraintStart_toEndOf="@+id/tv_strike_price" />

                            <TextView
                                android:id="@+id/tv_inclusive_of_all_taxes"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:text="Inclusive of all taxes"
                                android:textColor="@color/grey_darker"
                                android:textSize="10sp"
                                app:layout_constraintStart_toStartOf="@+id/tv_price"
                                app:layout_constraintTop_toBottomOf="@+id/tv_price" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/cl_get_cashBack"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="15dp"
                            android:paddingBottom="0dp">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/cl_add_cart"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="15dp"
                                app:layout_constraintTop_toTopOf="parent">

                                <TextView
                                    android:id="@+id/tv_deliver_by_lbl"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/opensans_semibold"
                                    android:text="Delivery by"
                                    android:textColor="@color/color_header_text"
                                    android:textSize="14sp"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:id="@+id/tv_tomorrow"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/opensans_bold"
                                    android:text="Tomorrow, before 10:00pm"
                                    android:textColor="@color/color_header_text"
                                    android:textSize="14sp"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/tv_deliver_by_lbl" />

                                <Button
                                    android:id="@+id/bt_md_addCart"
                                    android:layout_width="120dp"
                                    android:layout_height="40dp"
                                    android:layout_marginStart="6dp"
                                    android:layout_marginTop="10dp"
                                    android:adjustViewBounds="true"
                                    android:background="@drawable/bottom_cta_ripple"
                                    android:fontFamily="@font/opensans_bold"
                                    android:onClick="@{() -> clickListener.addCart()}"
                                    android:padding="10dp"
                                    android:text="Add To Cart"
                                    android:textAllCaps="false"
                                    android:textColor="@color/white"
                                    android:textSize="14sp"
                                    app:layout_constraintBottom_toBottomOf="@id/guideline"
                                    app:layout_constraintEnd_toEndOf="parent" />

                                <LinearLayout
                                    android:id="@+id/llAddPlusMinus"
                                    android:layout_width="120dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="10dp"
                                    android:gravity="center"
                                    android:visibility="gone"
                                    app:layout_constraintBottom_toBottomOf="@id/guideline"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent">

                                    <de.hdodenhof.circleimageview.CircleImageView
                                        android:id="@+id/iv_minus"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:onClick="@{() -> clickListener.itemMinus()}"
                                        android:src="@drawable/ic_remove_cart" />

                                    <TextView
                                        android:id="@+id/tv_quantity"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="4dp"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="10dp"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/opensans_bold"
                                        android:gravity="center"
                                        android:paddingLeft="6dp"
                                        android:paddingTop="2dp"
                                        android:paddingRight="6dp"
                                        android:paddingBottom="2dp"
                                        android:text="1"
                                        android:textColor="@color/black_new"
                                        android:textSize="12sp" />

                                    <de.hdodenhof.circleimageview.CircleImageView
                                        android:id="@+id/iv_plus"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:onClick="@{() -> clickListener.itemPlus()}"
                                        android:src="@drawable/ic_add_cart" />
                                </LinearLayout>


                                <androidx.constraintlayout.widget.Guideline
                                    android:id="@+id/guideline"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    app:layout_constraintGuide_percent="0.5" />

                                <TextView
                                    android:id="@+id/tv_return_policy"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:fontFamily="@font/opensans_regular"
                                    android:text="7 Day return policy ReadMore.."
                                    android:textColor="@color/color_text_grey"
                                    android:textSize="10sp"
                                    android:visibility="visible"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/guideline" />

                                <View
                                    android:id="@+id/view_md0"
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginTop="5dp"
                                    android:background="@color/color_grey"
                                    android:visibility="visible"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/guideline" />
                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <View
                            android:id="@+id/divider_cl_together"
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            android:layout_marginTop="5dp"
                            android:background="@color/color_grey" />

                        <TextView
                            android:id="@+id/tv_md_desc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/opensans_bold"
                            android:text="Medical Description"
                            android:textColor="@color/colorPrimary"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_md_desc_input"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="@font/opensans_regular"
                            android:justificationMode="inter_word"
                            android:textColor="@color/color_header_text" />

                    </LinearLayout>
                </com.google.android.material.appbar.CollapsingToolbarLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_grey"
                    android:orientation="horizontal">

                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/tab_detail"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        app:tabIndicatorColor="@color/colorPrimary"
                        app:tabIndicatorHeight="2dp"
                        app:tabMode="scrollable"
                        app:tabPaddingEnd="10dp"
                        app:tabPaddingStart="10dp"
                        app:tabSelectedTextColor="@color/colorPrimary"
                        app:tabTextAppearance="@style/CustomTextAppearanceTab"
                        app:tabTextColor="@color/grey500" />
                </LinearLayout>

            </com.google.android.material.appbar.AppBarLayout>

            <androidx.core.widget.NestedScrollView
                android:id="@+id/nsv_below_tabs"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_sideEffect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginRight="5dp" />

            </androidx.core.widget.NestedScrollView>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <RelativeLayout
            android:id="@+id/collapse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:background="@color/white"
            android:paddingLeft="10dp"
            android:paddingRight="15dp"
            android:paddingBottom="5dp"
            android:visibility="invisible">

            <Button
                android:id="@+id/bt_md_addCartTop"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:adjustViewBounds="true"
                android:background="@drawable/bt_md_add_cart"
                android:fontFamily="@font/opensans_bold"
                android:onClick="@{() -> clickListener.addCart()}"
                android:padding="10dp"
                android:text="Add To Cart"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:visibility="visible" />


            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="10dp"
                android:onClick="@{() -> clickListener.backMDDetail()}"
                android:src="@drawable/ic_back_pay" />

            <TextView
                android:id="@+id/text_collapse_mode_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="15dp"
                android:layout_toStartOf="@+id/bt_md_addCartTop"
                android:layout_toEndOf="@+id/iv_back"
                android:ellipsize="end"
                android:fontFamily="@font/opensans_bold"
                android:lineSpacingExtra="8sp"
                android:maxLines="1"
                android:text="Ecosprin 75mg strip"
                android:textColor="@color/color_header_text"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_price_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_collapse_mode_name"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_toEndOf="@+id/iv_back"
                android:drawableStart="@drawable/ic_rupees_new"
                android:fontFamily="@font/opensans_bold"
                android:text="40"
                android:textColor="@color/color_header_text"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_strike_price_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_collapse_mode_name"
                android:layout_alignBottom="@+id/tv_price_top"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/tv_price_top"
                android:fontFamily="@font/opensans_bold"
                android:text="MRP 45"
                android:textColor="@color/grey_light"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_discount_percent_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_collapse_mode_name"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_toEndOf="@+id/tv_strike_price_top"
                android:background="@drawable/ribbon_horizontal"
                android:fontFamily="@font/opensans_semibold"
                android:gravity="center_vertical"
                android:text="15%OFF"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <LinearLayout
                android:id="@+id/llAddPlusMinus_top"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_collapse_mode_name"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="1dp"
                android:adjustViewBounds="true"
                android:gravity="center"
                android:visibility="invisible">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_minus_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="@{() -> clickListener.itemMinus()}"
                    android:src="@drawable/ic_remove_cart" />

                <TextView
                    android:id="@+id/tv_quantity_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/opensans_bold"
                    android:gravity="center"
                    android:paddingLeft="6dp"
                    android:paddingTop="2dp"
                    android:paddingRight="6dp"
                    android:paddingBottom="2dp"
                    android:text="1"
                    android:textColor="@color/black_new"
                    android:textSize="12sp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_plus_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="@{() -> clickListener.itemPlus()}"
                    android:src="@drawable/ic_add_cart" />
            </LinearLayout>

        </RelativeLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_viewCart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/white">

            <View
                android:id="@+id/view2"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="#dfe3e6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_cartItem"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans_bold"
                android:gravity="center_vertical"
                android:maxWidth="90dp"
                android:maxLines="2"
                android:paddingLeft="10dp"
                android:text="12 Item \nin Cart"
                android:textColor="@color/color_header_text"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_view_cart"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bottom_cta_ripple"
                android:clickable="true"
                android:fontFamily="@font/opensans_bold"
                android:gravity="center"
                android:onClick="@{() -> clickListener.moveCartPage()}"
                android:text="View Cart"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_cartItem"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </RelativeLayout>

</layout>