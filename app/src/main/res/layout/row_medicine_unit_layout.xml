<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_medicine_unit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:foreground="?android:attr/selectableItemBackground"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/tv_drug_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="16dp"
            android:ellipsize="end"
            android:fontFamily="@font/opensans_bold"
            android:maxLines="3"
            android:text="Ecosprin 75mg strip of 14 Tablets"
            android:textColor="@color/color_header_text"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_goneMarginStart="16dp"
            app:layout_goneMarginTop="20dp" />

        <TextView
            android:id="@+id/tv_manufacturer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="16dp"
            android:text="Dolo"
            android:textColor="@color/color_text_grey"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_drug_name"
            app:layout_goneMarginStart="16dp" />

        <TextView
            android:id="@+id/tv_quantity_pack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="5dp"
            android:ellipsize="end"
            android:fontFamily="@font/opensans_semibold"
            android:maxLines="2"
            android:text="14 Tablet(S)IN STRIP"
            android:textColor="@color/color_header_text"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_manufacturer"
            app:layout_goneMarginStart="16dp" />

        <LinearLayout
            android:id="@+id/ratings_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="@+id/tv_quantity_pack"
            app:layout_constraintTop_toBottomOf="@+id/tv_quantity_pack">

            <RatingBar
                android:id="@+id/rbItem"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:isIndicator="true"
                android:layerType="software"
                android:numStars="5"
                android:stepSize="0.05" />

            <TextView
                android:id="@+id/tv_ratings_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:text="4.8"
                android:textColor="@color/color_text_grey"
                android:textSize="12sp"
                app:layout_goneMarginStart="16dp" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:drawableStart="@drawable/ic_rupees_new"
            android:fontFamily="@font/opensans_bold"
            android:text="12"
            android:textColor="@color/color_header_text"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ratings_layout"
            app:layout_goneMarginStart="16dp" />

        <TextView
            android:id="@+id/tv_strike_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/opensans_bold"
            android:text="MRP 14"
            android:textColor="@color/grey_darker"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_price"
            app:layout_constraintStart_toEndOf="@+id/tv_price" />

        <TextView
            android:id="@+id/tv_discount_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:background="@drawable/ribbon_horizontal"
            android:fontFamily="@font/opensans_semibold"
            android:gravity="center_vertical"
            android:text="15%OFF"
            android:textColor="@color/white"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_strike_price"
            app:layout_constraintStart_toEndOf="@+id/tv_strike_price" />

        <TextView
            android:id="@+id/tv_inclusive_of_all_taxes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="Inclusive of all taxes"
            android:textColor="@color/grey_darker"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="@+id/tv_price"
            app:layout_constraintTop_toBottomOf="@+id/tv_price" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
